<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import com.calendarfx.view.CalendarView?>

<VBox alignment="TOP_CENTER" prefHeight="1075.0" prefWidth="1138.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.somihmih.HelloController">
    <padding>
        <Insets left="5.0" right="5.0" />
    </padding>
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Read All...">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onShowAllPatients" text="Patients" />
            </items>
              <items>
              <MenuItem mnemonicParsing="false" onAction="#onShowAllAdmissions" text="Admissions" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                <Menu text="Patient">
                    <items>
                        <MenuItem onAction="#updatePatient" text="Update" />
                        <MenuItem onAction="#insertNewPatient" text="Insert as new" />
                        <MenuItem onAction="#deletePatient" text="Delete" />
                    </items>
                </Menu>
            </items>
            <items>
                <Menu text="Admission">
                    <items>
                        <MenuItem onAction="#deleteAdmission" text="Delete" />
                    </items>
                </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Insert">
            <items>
              <MenuItem mnemonicParsing="false" text="Patient" />
            </items>
              <items>
              <MenuItem mnemonicParsing="false" text="Admission" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Service">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onReindex" text="Reindex All" />
            </items>
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onExit" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>

       <HBox spacing="10">
      <children>
              <VBox spacing="10">
                 <children>
                     <HBox spacing="10">
                        <children>
                            <Label>Name:</Label>
                            <TextField fx:id="name" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                     <HBox spacing="10">
                        <children>
                            <Label>Phone:</Label>
                            <TextField fx:id="phone" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                     <HBox alignment="BOTTOM_RIGHT" spacing="10">
                        <children>
                            <VBox alignment="BOTTOM_RIGHT" spacing="10">
                               <children>
                                   <Button onAction="#updatePatient" text="Update patient" />
                                   <Button onAction="#insertNewPatient" text="Insert as new patient" />
                               </children>
                            </VBox>
                        </children>
                     </HBox>
                 </children>
              </VBox>
                  <TableView fx:id="patientsTable" items="${controller.patientList}" maxWidth="-Infinity" prefHeight="200.0" prefWidth="374.0">
                      <columns>
                          <TableColumn text="Id">
                              <cellValueFactory>
                                  <PropertyValueFactory property="id" />
                              </cellValueFactory>
                          </TableColumn>
                          <TableColumn text="Name">
                              <cellValueFactory>
                                  <PropertyValueFactory property="name" />
                              </cellValueFactory>
                          </TableColumn>
                          <TableColumn text="Phone">
                              <cellValueFactory>
                                  <PropertyValueFactory property="phoneNumber" />
                              </cellValueFactory>
                          </TableColumn>
                      </columns>
                  </TableView>
              <VBox spacing="10">
      <children>
                     <HBox spacing="10">
                        <children>
                            <Label>Filter by:</Label>
                        </children>
                     </HBox>
                     <HBox spacing="10">
                        <children>
                            <Label>Name:</Label>
                            <TextField fx:id="byName" promptText="HBox 2 TextField" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                     <HBox spacing="10">
                        <children>
                            <Label>Phone:</Label>
                            <TextField fx:id="byPhone" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
      </children>
              </VBox>
      </children>
       </HBox>
      <ScrollPane fx:id="scrollGrid1" prefHeight="200.0" prefWidth="200.0">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TableView fx:id="admissionsTable" items="${controller.admissionsList}" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <columns>
                        <TableColumn text="Id">
                           <cellValueFactory>
                              <PropertyValueFactory property="id" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Date">
                           <cellValueFactory>
                              <PropertyValueFactory property="date" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                  </TableView>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
   </children>
    <CalendarView fx:id="calendarView" prefWidth="400" prefHeight="500"/>
</VBox>
